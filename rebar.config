%% -*- mode: erlang -*-
%% -*- tab-width: 4;erlang-indent-level: 4;indent-tabs-mode: nil -*-
%% ex: ts=4 sw=4 ft=erlang et
{erl_opts, [
    warnings_as_errors,
    {parse_transform, lager_transform},
    debug_info
]}.

{deps,
 [
  {lager, "2.1.1",
    {git, "git://github.com/basho/lager.git", {tag, "2.1.1"}}},
  {hpack, ".*",
    {git, "git://github.com/omarkj/hpack.git", {branch, "omarkj-custom-index-matcher"}}}
 ]}.

{cover_enabled, true}.

{ct_opts, [{verbose,true}]}.

{profiles, [
           {test, [{erl_opts, [
                        {i,["include"]}
                    ]}
                  ]
           }]
}.

{relx, [
  {release,{chatterbox,"0.0.1"},
    [chatterbox]},
        {sys_config, "./config/sys.config"},
        %%{vm_args, "./config/vm.args"},

        {dev_mode, true},
        {include_erts, false},

        {extended_start_script, true},
        {overlay,[
                  {template,"config/sys.config","sys.config"},
                  {copy,"config/localhost.crt","."},
                  {copy,"config/localhost.key","."}
                 ]}
]}.
